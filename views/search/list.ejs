<!DOCTYPE html>
<html lang="ja">

<head>
  <%- include('../_share/metadata.ejs') %>
  <title>Document</title>
  <%- include('../_share/stylesheets.ejs') %>
</head>

<body>
  <div class="outerframe">

    <%- include("../_share/navbar.ejs") %>

    <main role="main" class="container">
      <div class="border-bottom">
        <form action="/search" method="GET" class="form-inline my-5 justify-content-center">
          <label class="sr-only" for="prefecture">State</label>
          <select id="prefecture" name="prefecture" class="form-control mb-2 mr-sm-2">
            <option value="">都道府県</option>
          </select>
          <label class="sr-only" for="city">State</label>
          <select id="city" name="city" class="form-control mb-2 mr-sm-2">
            <option selected>市区町村</option>
            <option>...</option>
          </select>
          <label class="sr-only" for="keyword">keyword</label>
          <input type="text" class="form-control mb-2 mr-sm-2 col-md-4" id="keyword" name="keyword" autofocus="autofocus" placeholder="キーワード" value="<%= keyword %>">
          <button class="btn btn-secondary mb-2 mr-sm-2" type="submit"><i class="fa fa-fw fa-search"></i></button>
        </form>
      </div>

      <div class="card-columns mt-5">
        <% for (var item of results) { %>
        <%- include("./item.ejs", item) %>
        <% } %>
      </div>
    </main>

    <%- include("../_share/footer.ejs") %>

  </div>
  <%- include("../_share/javascripts.ejs") %>
</body>

</html>