<!DOCTYPE html>
<html lang="ja">

<head>
  <%- include('../_share/metadata.ejs') %>
  <title>サインアップ</title>
  <%- include("../_share/stylesheets.ejs") %>
</head>

<body>
  <div class="outerframe">

    <%- include("../_share/navbar.ejs") %>

    <main role="main" class="container">

      <div class="border-bottom mt-5 mb-5">
        <h1>アカウントを作成</h1>
      </div>

      <div class="row justify-content-center">
        <form method="POST" action="/account/register/execute" class="col-sm-10 col-lg-8">
          <p><%- error_msg %></p>
          <div class="form-group row">
            <label for="username" class="col-sm-3 col-form-label">ユーザー名：</label>
            <div class="col-sm-9">
              <input type="text" id="username" name="username" class="form-control" value="<%=form.username%>"/>
            </div>
          </div>
          <div class="form-group row">
            <label for="email" class="col-sm-3 col-form-label">メールアドレス：</label>
            <div class="col-sm-9">
              <input type="email" id="email" name="email" class="form-control" value="<%=form.email%>"/>
            </div>
          </div>
          <div class="form-group row">
            <label for="password" class="col-sm-3 col-form-label">パスワード：</label>
            <div class="col-sm-9">
              <input type="password" id="password" name="password" class="form-control" value="<%= form.password %>"/>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-3"></div>
            <div class="col-sm-9">
              <input type="submit" class="btn btn-primary" value="登録" />
            </div>
          </div>
        </form>
      </div>

    </main>

    <%- include("../_share/footer.ejs") %>

  </div>

  <%- include("../_share/javascripts.ejs") %>
</body>

</html>